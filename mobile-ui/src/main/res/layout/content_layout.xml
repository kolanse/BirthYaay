<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/remove_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/remove_interest_str"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/garbage_red"
        app:layout_constraintBottom_toBottomOf="@+id/remove_content_tv"
        app:layout_constraintStart_toEndOf="@+id/remove_content_tv"
        app:layout_constraintTop_toTopOf="@+id/remove_content_tv" />

    <TextView
        android:id="@+id/remove_content_message_tv"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_32"
        tools:text="@string/remove_message_str"
        android:textAlignment="center"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_content_tv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16"
        android:text="@string/remove_interest_str"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/size_32"
        android:layout_marginStart="@dimen/size_32"
        android:layout_marginEnd="@dimen/size_32"
        app:backgroundTint="@color/dark_red"
        app:cornerRadius="@dimen/size_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_content_message_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>