<?xml version="1.0" encoding="utf-8"?>
<com.example.birthyaay.custom_views.textviews.shimmer.CustomGiftLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gift_bg"
    android:layout_marginTop="@dimen/size_24"
    android:layout_marginEnd="@dimen/size_15"
    android:paddingVertical="@dimen/size_32"
    android:paddingHorizontal="@dimen/size_50"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gift_iv"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:src="@drawable/ic_gift_boxes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/gift_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Shoes"
        android:layout_marginTop="@dimen/size_18"
        app:layout_constraintTop_toBottomOf="@+id/gift_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</com.example.birthyaay.custom_views.textviews.shimmer.CustomGiftLayout>