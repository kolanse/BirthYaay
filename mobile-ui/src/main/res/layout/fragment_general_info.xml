<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.GeneralInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_str"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingVertical="@dimen/size_18"
        android:background="@drawable/separator_line_bg"
        >
        <TextView
            android:id="@+id/phone_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:text="@string/dummy_phone_no"
            android:layout_weight="0.95"
            />

        <ImageView
            android:id="@+id/phone_num_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email_address_str"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingVertical="@dimen/size_18"
        android:background="@drawable/separator_line_bg"
        >
        <TextView
            android:id="@+id/email_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_email_str"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="0.95"
            />

        <ImageView
            android:id="@+id/email_address_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_edit"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_of_birth_str"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingVertical="@dimen/size_18"
        android:background="@drawable/separator_line_bg"
        >
        <TextView
            android:id="@+id/date_of_birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_date_of_birth_str"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="0.95"
            />

        <ImageView
            android:id="@+id/date_of_birth_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.05"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_str"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingVertical="@dimen/size_18"
        android:background="@drawable/separator_line_bg"
        >
        <TextView
            android:id="@+id/note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_note_str"
            android:lineSpacingExtra="@dimen/size_10"
            android:maxLines="6"
            android:textSize="@dimen/text_size_14"
            android:layout_weight="0.9"
            />

        <ImageView
            android:id="@+id/note_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:paddingStart="@dimen/size_8"
            android:paddingEnd="@dimen/size_8"
            />

    </LinearLayout>



</LinearLayout>