<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirthYaay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="fontFamily">@font/montserrat</item>-->
        
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogSheetTheme</item>
        
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/state_colors</item>
        <item name="hintTextColor">@color/state_colors</item>
    </style>


    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/purple_100</item>
    </style>

    <style name="AutoCompleteEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/state_colors</item>
        <item name="hintTextColor">@color/state_colors</item>
    </style>


    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/purple_100</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="BottomSheetDialogSheetTheme" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogSheet</item>
    </style>

    <style name="BottomSheetDialogSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogBackground</item>
    </style>
    
    <style name="BottomSheetDialogBackground" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>


</resources>